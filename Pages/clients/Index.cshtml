@page
@model RegistrationPage.Pages.clients.IndexModel
@{
}

<br />
<h2>Users</h2>
<a class="btn btn-primary btn-sm" href="/clients/NewClient">New Client</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Created at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listClients)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Created_at</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.Id">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/Clients/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>

        }
    </tbody>

</table>


